{
  "name": "@nx-project-release",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/project-release/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/project-release",
        "main": "packages/project-release/src/index.ts",
        "tsConfig": "packages/project-release/tsconfig.lib.json",
        "assets": [
          "packages/project-release/*.md",
          "packages/project-release/.npmignore",
          {
            "input": "./packages/project-release/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/project-release/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/project-release",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/project-release",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "./packages/project-release/release",
            "glob": "schema.json",
            "output": "./release"
          },
          {
            "input": "./packages/project-release/scripts",
            "glob": "**/*.js",
            "output": "./scripts"
          }
        ]
      }
    },
    "fix-esm": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "tsc-esm-fix --target=dist/project-release --ext=.js"
      }
    },
    "version": {
      "executor": "nx-project-release:version",
      "options": {
        "versionFiles": ["package.json"],
        "versionPath": "version"
      }
    },
    "changelog": {
      "executor": "nx-project-release:changelog",
      "options": {
        "preset": "angular"
      }
    },
    "publish": {
      "executor": "nx-project-release:publish",
      "dependsOn": ["fix-esm"],
      "options": {
        "publishDir": "dist/project-release",
        "buildTarget": "build",
        "registryType": "npm",
        "registry": "https://registry.npmjs.org",
        "access": "public",
        "distTag": "latest"
      }
    },
    "project-release": {
      "executor": "nx-project-release:project-release",
      "dependsOn": ["fix-esm"],
      "options": {
        "packageRoot": "dist/project-release",
        "buildTarget": "build",
        "versionFiles": ["package.json"],
        "versionPath": "version"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/project-release/jest.config.ts"
      }
    }
  }
}
