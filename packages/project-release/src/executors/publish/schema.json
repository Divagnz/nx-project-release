{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Publish Executor",
  "description": "Polyglot package publishing to npm, Nexus, or custom registries for any project type",
  "type": "object",
  "properties": {
    "dryRun": {
      "type": "boolean",
      "default": false,
      "description": "Preview publish without actually publishing"
    },
    "registry": {
      "type": "string",
      "description": "Registry URL to publish to"
    },
    "registryType": {
      "type": "string",
      "enum": ["npm", "nexus", "custom"],
      "default": "npm",
      "description": "Type of registry"
    },
    "distTag": {
      "type": "string",
      "description": "Distribution tag for npm",
      "default": "latest"
    },
    "access": {
      "type": "string",
      "enum": ["public", "restricted"],
      "default": "public",
      "description": "Package access level"
    },
    "buildTarget": {
      "type": "string",
      "description": "Build target to run before publishing"
    },
    "publishDir": {
      "type": "string",
      "description": "Directory to publish from"
    },
    "skipBuild": {
      "type": "boolean",
      "default": false,
      "description": "Skip running build target"
    },
    "otp": {
      "type": "string",
      "description": "One-time password for npm 2FA"
    }
  }
}